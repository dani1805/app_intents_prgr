<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fifa3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:drawableLeft="@drawable/ic_baseline_games_24"
                android:drawableRight="@drawable/ic_baseline_sports_baseball_24"
                android:fontFamily="@font/david_libre_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Fifa League"
                android:textColor="#FFFFFF"
                android:textSize="46sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="10dp"
            android:text="¡Inscribete!"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FDF8F8"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FDF8F8"
            android:ems="10"
            android:hint="Edad"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FDF8F8"
            android:ems="10"
            android:hint="Dirección"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FDF8F8"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/playCompetition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#BEF49EEC">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="¿Juegas a Fut Champions con asiduidad?"
                    android:textColor="#F4EFEF" />

                <RadioButton
                    android:id="@+id/play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FAF4F4"
                    android:checked="false"
                    android:text="Sí"
                    android:textColor="#F3EEEE" />

                <RadioButton
                    android:id="@+id/notPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FAF4F4"
                    android:text="No"
                    android:textColor="#F3EEEE" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/numberVictories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#BEF49EEC">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="¿Cuántas victorias  haces en el Fut Champions?"
                    android:textColor="#F1EFEF"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/less15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FAF4F4"
                    android:singleLine="true"
                    android:text="Entre 0 y 15"
                    android:textColor="#EDE9E9" />

                <RadioButton
                    android:id="@+id/more15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FAF4F4"
                    android:singleLine="true"
                    android:text="Entre 15 y 30"
                    android:textColor="#EDE9E9" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#9F5FBFBC"
                android:padding="10dp"
                android:text="PRESS START" />

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#9F5FBFBC"
                android:padding="10dp"
                android:text="RESTART" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>